@model Future_Generation.Models.StudentCourses


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee Department</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="StudentId">Student</label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.stdList"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CourseId">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.crsList"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

