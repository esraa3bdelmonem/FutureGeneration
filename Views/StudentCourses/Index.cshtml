@model IEnumerable<Future_Generation.Models.StudentCourses>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h2 class="text-center">Student Course</h2>

    <div class="row justify-content-center mb-3">
        <div class="col-md-6 col-sm-12 mb-3">
            <a asp-action="Create" class="btn btn-success btn-block">Create New</a>
        </div>
        <div class="col-md-6 col-sm-12 mb-3">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="Employee">Employee</label>
                    </div>
                    @Html.DropDownList("Student", (SelectList)ViewBag.stdList, "Select Student", new { @class = "form-control" })

                    <div class="input-group-prepend">
                        <label class="input-group-text" for="Course">Course</label>
                    </div>
                    @Html.DropDownList("Course", (SelectList)ViewBag.crsList, "Select Course", new { @class = "form-control" })

                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Student.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Course.CourseName)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


