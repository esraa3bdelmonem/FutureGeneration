@model Future_Generation.Models.Student

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">Employee Data</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Employee</h4>
            <hr />
            <dl class="row">
                
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Email:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-2">Telephone:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Telephone)</dd>
                <dt class="col-sm-2">Address:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>Student Courses</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var crs in ViewBag.AllCrss)
                    {
                        <tr>
                            <td>@crs</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <p>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </p>
        </div>
    </div>
</div>

