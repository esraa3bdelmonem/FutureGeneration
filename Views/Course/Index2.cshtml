@using Microsoft.AspNetCore.Mvc
@model Future_Generation.Common.SearchResultViewModel<Course>

@{
    ViewData["Title"] = "Course List";
}

<h1>Course List</h1>


<form method="get">
    <div class="form-group">
        <input type="text" name="SearchCriteria.Name" placeholder="Search by Course Name" value="@Model.SearchCriteria.Name" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.SearchResult.List)
        {
            <tr>
                <td>@course.CourseName</td>
              
            </tr>
        }
    </tbody>
</table>


